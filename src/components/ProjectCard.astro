---
export interface Props {
  title: string;
  description: string;
  technologies: string[];
  image?: string;
  githubUrl?: string;
  liveUrl?: string;
  featured?: boolean;
}

const { 
  title, 
  description, 
  technologies, 
  image, 
  githubUrl, 
  liveUrl,
  featured = false 
} = Astro.props;
---

<div class={`card transition-all duration-300 hover:shadow-lg hover:-translate-y-1 ${featured ? 'ring-2 ring-primary-200' : ''}`}>
  {image && (
    <div class="mb-4 rounded-lg overflow-hidden">
      <img 
        src={image} 
        alt={title}
        class="w-full h-48 object-cover"
        loading="lazy"
      />
    </div>
  )}
  
  <div class="flex-1">
    <div class="flex items-start justify-between mb-3">
      <h3 class="text-xl font-semibold text-secondary-900">
        {title}
        {featured && (
          <span class="ml-2 text-xs bg-primary-100 text-primary-800 px-2 py-1 rounded-full">
            Featured
          </span>
        )}
      </h3>
      
      <div class="flex space-x-2 ml-4">
        {githubUrl && (
          <a 
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-secondary-500 hover:text-secondary-700 transition-colors"
            aria-label="Voir le code source"
          >
            <div class="i-carbon-logo-github w-5 h-5"></div>
          </a>
        )}
        {liveUrl && (
          <a 
            href={liveUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-secondary-500 hover:text-primary-600 transition-colors"
            aria-label="Voir le projet en live"
          >
            <div class="i-carbon-launch w-5 h-5"></div>
          </a>
        )}
      </div>
    </div>
    
    <p class="text-secondary-600 mb-4 leading-relaxed">
      {description}
    </p>
    
    <div class="flex flex-wrap gap-2">
      {technologies.map((tech) => (
        <span class="px-3 py-1 bg-secondary-100 text-secondary-700 text-sm rounded-full font-medium">
          {tech}
        </span>
      ))}
    </div>
  </div>
</div>
